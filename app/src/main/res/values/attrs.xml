<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="ZoneView">
    <attr name="bg_color" format="color" />
    <attr name="front_color" format="color" />
    <attr name="text_color" format="color" />
    <attr name="head_drawable" format="reference" />
    <attr name="phone_head_padding" format="dimension" />
    <attr name="phone_name_padding" format="dimension" />
    <attr name="head_radius" format="dimension" />
  </declare-styleable>

  <declare-styleable name="HeadView">
    <attr name="head_size" format="dimension" />
  </declare-styleable>

  <declare-styleable name="TrendView">
    <attr name="fromColor" format="color" />
    <attr name="toColor" format="color" />
    <attr name="imaginaryHColor" format="color" />
    <attr name="imaginaryVColor" format="color" />
    <attr name="lineColor" format="color" />
    <attr name="textColor" format="color" />
    <attr name="circleColor" format="color" />
    <attr name="textSize" format="dimension" />
  </declare-styleable>

  <declare-styleable name="LoadingView">
    <attr name="lv_arcColor" format="color|reference" />
    <attr name="lv_bgColor" format="color|reference" />
    <attr name="lv_showBg" format="boolean" />
    <attr name="lv_strokeWidth" format="dimension" />
    <attr name="lv_padding" format="dimension" />
    <attr name="lv_margin" format="dimension" />
    <attr name="lv_logo" format="reference" />
    <attr name="lv_speed" format="float" />
    <attr name="lv_circle" format="boolean" />
  </declare-styleable>

  <declare-styleable name="ClearAbleEditText">
    <attr name="clearIconDrawable" format="reference" />
    <attr name="clearIconPadding" format="dimension" />
    <attr name="clearIconGravity">
      <flag name="top" value="0x30" />
      <flag name="bottom" value="0x50" />
      <flag name="left" value="0x03" />
      <flag name="right" value="0x05" />
      <flag name="center_vertical" value="0x10" />
      <flag name="center_horizontal" value="0x01" />
      <flag name="center" value="0x11" />
    </attr>
    <attr name="clearIconClipParentPadding" format="boolean" />
    <attr name="clearIconDivision" format="boolean" />
    <attr name="clearIconDisabled" format="boolean" />
  </declare-styleable>

  <declare-styleable name="LimitEditText">
    <attr name="decimalNum" format="integer" />
    <attr name="maxValue" format="integer" />
  </declare-styleable>

  <declare-styleable name="WheelView">
    <attr name="wv_unitHeight" format="dimension" />
    <attr name="wv_itemNumber" format="integer" />

    <attr name="wv_normalTextColor" format="color" />
    <attr name="wv_normalTextSize" format="dimension" />
    <attr name="wv_selectedTextColor" format="color" />
    <attr name="wv_selectedTextSize" format="dimension" />

    <attr name="wv_lineColor" format="color" />
    <attr name="wv_lineHeight" format="dimension" />

    <attr name="wv_maskHeight" format="dimension" />
    <attr name="wv_noEmpty" format="boolean" />
    <attr name="wv_isEnable" format="boolean" />
  </declare-styleable>

  <declare-styleable name="PullToZoomScrollView">
    <attr name="zoomAble" format="boolean" />
    <attr name="parallaxAble" format="boolean" />
    <attr name="rollbackAble" format="boolean" />
  </declare-styleable>
</resources>