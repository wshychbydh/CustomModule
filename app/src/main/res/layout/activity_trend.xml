<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  xmlns:android="http://schemas.android.com/apk/res/android" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cool.eye.func.view.tendency.OrderTrendView
      android:id="@+id/trendView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <com.cool.eye.func.view.tendency.TendencyView
      android:id="@+id/trendView2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.cool.eye.func.view.trend.view.GoldTrendView
        android:id="@+id/chartView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circleColor="#efbb63"
        app:fromColor="#ffffff"
        app:imaginaryHColor="#aaa"
        app:imaginaryVColor="#eac587"
        app:lineColor="#efbb63"
        app:textColor="#999999"
        app:textSize="10sp"
        app:toColor="#fdbc4f" />
    </HorizontalScrollView>

  </LinearLayout>
</ScrollView>