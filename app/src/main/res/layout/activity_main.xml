<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.cool.eye.func.view.ZoneView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:head_drawable="@drawable/st94"
    app:phone_head_padding="6dp" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.cool.eye.func.view.FlexBoxLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toFilePermission"
        android:text="文件权限" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toDownloadApk"
        android:text="下载安装apk" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toBanner"
        android:text="Banner" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toTheme"
        android:text="主题" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPermission"
        android:text="动态获取权限" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toAddress"
        android:text="地址选择器" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toTrendView"
        android:text="走势图" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toNotify"
        android:text="消息监听" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toPhotoView"
        android:text="拍照" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toTask"
        android:text="任务" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toAdapter"
        android:text="通用适配器" />

      <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="toScan"
        android:text="扫码" />
    </com.cool.eye.func.view.FlexBoxLayout>
  </ScrollView>
</LinearLayout>
