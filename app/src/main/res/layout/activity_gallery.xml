<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.leochuan.AutoPlayRecyclerView
      android:id="@+id/autoRv1"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      app:direction="right"
      app:timeInterval="2000" />

    <com.leochuan.AutoPlayRecyclerView
      android:id="@+id/autoRv2"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="10dp"
      app:direction="right"
      app:timeInterval="3000" />

    <com.leochuan.AutoPlayRecyclerView
      android:id="@+id/autoRv3"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="10dp"
      app:direction="left"
      app:timeInterval="4000" />

    <com.leochuan.AutoPlayRecyclerView
      android:id="@+id/autoRv4"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="10dp"
      app:direction="left"
      app:timeInterval="2500" />

    <com.leochuan.AutoPlayRecyclerView
      android:id="@+id/autoRv5"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="10dp"
      app:direction="left"
      app:timeInterval="1500" />

    <com.leochuan.AutoPlayRecyclerView
      android:id="@+id/autoRv6"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:layout_marginTop="10dp"
      app:direction="left"
      app:timeInterval="3500" />

    <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:onClick="changePagerNum"
      android:text="改变数量" />
  </LinearLayout>
</ScrollView>