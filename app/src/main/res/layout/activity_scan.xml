<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <SurfaceView
    android:id="@+id/surfaceView"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <com.eye.cool.scan.view.CaptureView
    android:id="@+id/captureView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:scan_duration="1500"
    app:scan_frame_drawable="@drawable/ic_scan_frame"
    app:scan_possible_point_color="#0b8efd"
    app:scan_scanner_drawable="@drawable/ic_scan" />

  <com.cool.eye.func.widget.StatedImageView
    android:id="@+id/imagePicker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:srcCompat="@mipmap/ic_launcher" />

  <com.cool.eye.func.widget.StatedImageView
    android:id="@+id/flashlight"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:srcCompat="@mipmap/ic_launcher" />

</androidx.constraintlayout.widget.ConstraintLayout>