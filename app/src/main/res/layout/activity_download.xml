<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical">

  <EditText
    android:id="@+id/urlEt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:text="https://5878a805eb.95apps.com/a612b7031d7e9b40d862928bfccf941e80955f8f.apk?auth_key=1599211874-0-0-dc84ac1ec3a2cd7bd039905609522a44"
    android:hint="请输入下载地址" />

  <androidx.appcompat.widget.AppCompatButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="installOffline"
    android:text="后台下载" />

  <androidx.appcompat.widget.AppCompatButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:onClick="installByDM"
    android:text="后台DM下载" />

  <androidx.appcompat.widget.AppCompatButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:onClick="installOnline"
    android:text="带进度下载" />
</LinearLayout>